generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Request {
  id          String @id @default(uuid())
  displayCode String @unique
  status      Status @default(Pending)
  description String

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String @unique

  repository   Repository @relation(fields: [repositoryId], references: [id])
  repositoryId String     @unique

  resources   Resources @relation(fields: [resourcesId], references: [id])
  resourcesId String    @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Repository {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?

  request Request?

  resources   Resources @relation(fields: [resourcesId], references: [id])
  resourcesId String    @unique

  collaborators User[]           @relation("RepositoryCollaborators")
  status        RepositoryStatus @default(Pending)

  UserRepository         ownedRepository[]
  RepositoryCollaborator RepositoryCollaborator[]
}

model Resources {
  id String @id @default(uuid())

  name          String
  cloudProvider String
  region        String

  repository Repository?

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id])
  resourceConfigId String         @unique

  request Request?
}

model ResourceConfig {
  id String @id @default(uuid())

  vms VMInstance[]
  dbs DatabaseInstance[]
  sts StorageInstance[]

  resources Resources?
}

model VMInstance {
  id String @id @default(uuid())

  name          String
  numberOfCores Int
  memory        Int
  os            String

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id])
  resourceConfigId String
}

model DatabaseInstance {
  id String @id @default(uuid())

  engine    String
  storageGB Int

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id])
  resourceConfigId String
}

model StorageInstance {
  id String @id @default(uuid())

  type       String
  capacityGB Int

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id])
  resourceConfigId String
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  role  Role

  collaboratedRepos      Repository[]             @relation("RepositoryCollaborators")
  request                Request[]
  UserRepository         ownedRepository[]
  RepositoryCollaborator RepositoryCollaborator[]
  RefreshToken           RefreshToken[]
}

enum RepositoryStatus {
  Created
  Pending
}

model ownedRepository {
  userId       String
  repositoryId String
  user         User       @relation(fields: [userId], references: [id])
  repository   Repository @relation(fields: [repositoryId], references: [id])

  @@id([userId, repositoryId])
}

model RepositoryCollaborator {
  userId       String
  repositoryId String

  user       User       @relation(fields: [userId], references: [id])
  repository Repository @relation(fields: [repositoryId], references: [id])

  assignedAt DateTime @default(now()) // optional: track metadata

  @@id([userId, repositoryId]) // Composite PK to prevent duplicates
  @@map("RepositoryCollaborators") // Name the actual table in the DB
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Status {
  Pending
  Approved
  Rejected
}

enum Role {
  Developer
  Admin
  IT
}
