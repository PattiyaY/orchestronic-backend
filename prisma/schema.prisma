generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Request {
  id          String  @id @default(uuid())
  displayCode String  @unique
  status      Status  @default(Pending)
  description String
  feedback    String?
  owner       User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId     String

  repository   Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  repositoryId String     @unique

  resources   Resources @relation(fields: [resourcesId], references: [id], onDelete: Cascade)
  resourcesId String    @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Repository {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?

  request Request?

  resources   Resources @relation(fields: [resourcesId], references: [id], onDelete: Cascade)
  resourcesId String    @unique

  collaborators User[]           @relation("RepositoryCollaborators")
  status        RepositoryStatus @default(Pending)

  UserRepository         ownedRepository[]
  RepositoryCollaborator RepositoryCollaborator[]
}

model Resources {
  id String @id @default(uuid())

  name          String
  cloudProvider String
  region        String

  repository Repository?

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id], onDelete: Cascade)
  resourceConfigId String         @unique

  request Request?
}

model ResourceConfig {
  id String @id @default(uuid())

  vms VMInstance[]
  dbs DatabaseInstance[]
  sts StorageInstance[]

  resources Resources?
}

model VMInstance {
  id String @id @default(uuid())

  name   String
  os     String
  size   AzureVMSize @relation(fields: [sizeId], references: [id], onDelete: Cascade)
  sizeId String

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id], onDelete: Cascade)
  resourceConfigId String
}

model DatabaseInstance {
  id String @id @default(uuid())
  name       String @default("database-instance")
  username   String @default("admin")
  password   String @default("P@ssw0rd!")
  engine    Engine @default(PostgreSQL)
  storageGB Int @default(2048)
  skuName   String @default("B_Standard_B1ms")

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id], onDelete: Cascade)
  resourceConfigId String
}

model StorageInstance {
  id String @id @default(uuid())

  type       String
  capacityGB Int

  resourceConfig   ResourceConfig @relation(fields: [resourceConfigId], references: [id], onDelete: Cascade)
  resourceConfigId String
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  role  Role

  collaboratedRepos      Repository[]             @relation("RepositoryCollaborators")
  request                Request[]
  UserRepository         ownedRepository[]
  RepositoryCollaborator RepositoryCollaborator[]
  RefreshToken           RefreshToken[]
  CloudResourceSecret    CloudResourceSecret[]
}

enum RepositoryStatus {
  Created
  Pending
}

model ownedRepository {
  userId       String
  repositoryId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository   Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@id([userId, repositoryId])
}

model RepositoryCollaborator {
  userId       String
  repositoryId String

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  assignedAt DateTime @default(now()) // optional: track metadata

  @@id([userId, repositoryId]) // Composite PK to prevent duplicates
  @@map("RepositoryCollaborators") // Name the actual table in the DB
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CloudResourceSecret {
  id             String        @id @default(uuid())
  clientId       String        @unique
  clientSecret   String
  subscriptionId String        @unique
  tenantId       String?
  User           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  cloudProvider  CloudProvider
}

model AzureVMSize {
  id                   String       @id @default(uuid())
  name                 String       @unique
  numberOfCores        Int
  maxDataDiskCount     Int
  memoryInMB           Int
  osDiskSizeInMB       Int
  resourceDiskSizeInMB Int
  VMInstance           VMInstance[]
}

model PolicyVM {
  id            String        @id @default(uuid())
  name          String
  numberOfCores Int
  memoryInMB    Int
  cloudProvider CloudProvider @unique
}

model PolicyDatabase {
  id            String        @id @default(uuid())
  maxStorage    Int
  cloudProvider CloudProvider @unique
}

model PolicyStorage {
  id            String        @id @default(uuid())
  maxStorage    Int
  cloudProvider CloudProvider @unique
}

enum CloudProvider {
  AWS
  AZURE
}

enum Status {
  Pending
  Approved
  Rejected
}

enum Role {
  Developer
  Admin
  IT
}

enum Engine {
  MySQL
  PostgreSQL
}